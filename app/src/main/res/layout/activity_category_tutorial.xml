<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.category.CategoryTutorialActivity">

    <FrameLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/primaryColor"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-4dp"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makeup Tutorial"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primaryColor"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/sc_tutorial"
        android:layout_width="405dp"
        android:layout_height="654dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_skin_preparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="1. Skin Preparation"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_skin_preparation"
                android:layout_width="219dp"
                android:layout_height="183dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/douyin" />

            <TextView
                android:id="@+id/tv_skin_preparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="lorem ipsum"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/title_base_makeup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="2. Base Makeup :  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_base_makeup"
                android:layout_width="219dp"
                android:layout_height="183dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/douyin" />

            <TextView
                android:id="@+id/tv_base_makeup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="lorem ipsum"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/title_eye_makeup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="3. Eye Makeup :  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_eye_makeup"
                android:layout_marginLeft="30dp"
                android:layout_width="219dp"
                android:layout_height="183dp"
                android:src="@drawable/douyin"
                />

            <TextView
                android:id="@+id/tv_eye_makeup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="lorem ipsum"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/title_lipstik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="4. Lipstick  :  "
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_lipstik"
                android:layout_marginLeft="30dp"
                android:layout_width="219dp"
                android:layout_height="183dp"
                android:src="@drawable/douyin"
                />

            <TextView
                android:id="@+id/tv_lipstik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="lorem ipsum"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>